@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Details</h1>
<form asp-controller="User" asp-action="UpdateUser" method="post">
    <input asp-for="User.Id" type="hidden" />
    <input asp-for="User.Password" type="hidden" />
    <input asp-for="User.Role" type="hidden" />

    <div class="form-group">
        <label asp-for="User.UserName"></label>
        <input class="form-control col-sm-6" type="text" asp-for="User.UserName" />
    </div>

    <div class="form-group">
        <label asp-for="User.FirstName"></label>
        <input class="form-control col-sm-6" type="text" asp-for="User.FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="User.LastName"></label>
        <input class="form-control col-sm-6" type="text" asp-for="User.LastName" />
    </div>

    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input class="form-control col-sm-6" type="text" asp-for="User.Email" />
    </div>

    <button type="submit">Save</button>
</form>

